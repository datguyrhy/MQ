<body>
    <div class="container">
        <div class="row">
            <div class="col-2">
                <h1>
                <strong>Title:</strong>
                </h1>

                <p>
                <strong>Restaurant:</strong>
                </p>

                <p>
                <strong>Pick Up Location:</strong>
                </p>

                <p>
                <strong>Message:</strong>
                </p>

                <p>
                <strong>Posted By:</strong>
                </p>

                <br>
                <%= link_to 'Back', posts_path %>
            </div>

            <div class="col-6">
                <h1>
                <%= @post.title %>
                </h1>

                <p>
                <%= @restaurant.name %>
                </p>

                <p>
                <%= @post.pickup_location %>
                </p>

                <p>
                <%= @post.message %>
                </p>

                <p>
                <%= @poster.email %>
                </p>

                <br>
            </div>
        </div>
    </div>

    <table>
        <tr>
            <td>Order ID</td>
            <td>Post ID</td>
            <td>Customer ID</td>
            <td>Total Payable</td>
        </tr>

        <% @orders.each do |order| %>
            <tr>
                <td><%= order.id %></td>
                <td><%= order.post_id %></td>
                <td><%= order.customer_id %></td>
                <td><%= order.total_payable %></td>
            </tr>
        <% end %>
    </table>


</body>