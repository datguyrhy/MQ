


<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <div class="container-fluid">
    <div class="col-12 d-flex justify-content-center">
      <div class="row">
        <div class = "col-12 d-flex flex-column justify-content-center">
          <div class="col-12 d-flex flex-column justify-content-center">

            <h1>New Post</h1>
            <p>
              <%= form.label :title %>
              <%= form.text_field :title %>
            </p>
            <div class ="row">
              <div id="result-name"></div>
              <div id="result-minimum"></div>
            </div>
              <div class = 'row'>
                <div class="col-4 d-flex flex-column justify-content-center" >
                <div id="result-image"></div>
              </div>
            </div>
        <div class="row">
          <div class="col-12 d-flex flex-column justify-content-center">
            <p><%= form.label :Restaurant %></p><br>
            <p><%= collection_select(:post, :restaurant_id, Restaurant.all, :id, :name, {prompt: true}, {:id => 'post_restaurant_id'}) %></p>
          </div>
        </div>
          <div class="row">
              <div class="col-12 d-flex flex-column justify-content-center">
              <p>  <%= form.label :pickup_location %><br>  </p>
                <p><%= form.text_field :pickup_location %></p>
            </div>
            </div>
              <div class="row">
                  <div class="col-12 d-flex flex-column justify-content-center">
                      <p> <%= form.label :message %><br>    </p>
                      <p><%= form.text_area :message %></p>
              </div>
              </div>
            <p>
              <%= form.submit({:class => "btn btn-primary btn-style"})%>
            </p>
            <%= button_to 'Back to All Posts', posts_path, {method:'get', class:'btn btn-primary btn-style'} %>
            </div>
          </div>
          </div>
      </div>



    </div>
<% end %>
