<h1>New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      
    </p>
  
    <p>
      <%= form.label :message %><br>
      <%= form.text_area :message %>
    </p>
  
    <p>
      <%= form.label :pick_up_location %><br>
      <%= form.text_field :pick_up_location %>
    </p>
  
    <p>
      <%= form.label :slots_available %><br>
      <%= form.text_field :slots_available %>
    </p>
  
    <p>
        <%= form.label :slots_left %><br>
        <%= form.text_field :slots_left%>
    </p>

    <p>
        <%= form.label :customer_id %><br>
        <%= form.text_field :customer_id %>
    </p>

    <p>
        <%= form.label :restaurant_id%><br>
        <%= form.text_field :restaurant_id %>
    </p>
    
    <p>
      <%= form.submit %>
    </p>
  <% end %>

<%= link_to 'Back', posts_path %>
