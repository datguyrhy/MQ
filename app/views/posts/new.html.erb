<h1>New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>  
  </p>
  
  <p>
  <%= form.label :Restaurant %><br>
  <%= collection_select(:post, :restaurant_id, Restaurant.all, :id, :name, prompt: true) %>
  </p>
  
  <p>
    <%= form.label :pickup_location %><br>
    <%= form.text_field :pickup_location %>
  </p>
 
  <p>
    <%= form.label :message %><br>
    <%= form.text_area :message %>
  </p>
  
  
  
    
    <p>
      <%= form.submit %>
    </p>
  <% end %>

<%= link_to 'Back', posts_path %>
