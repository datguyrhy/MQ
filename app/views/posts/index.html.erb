<p id="notice"><%= notice %></p>

<h1>Welcome to MQ!</h1>
<h1>Posts</h1>

<div class="row sticky">
  <div class="btn post-new">
    <%= link_to 'New Post', new_post_path %>
  </div>
</div>



<div class='container'>
  <% @posts.each_slice(3) do |post| %><br>
    <div class="row">
      <% post.each do |k| %>
        <div class='col-md-4'>
          <div class="card">
            <img src="<%= k.restaurant.image_url%>" class="image">

            <div class="overlay">
              <div class="title"><strong><%=k.title%></strong></div>
              <div class="message"><%=k.message%></div>

              <div class="btn btn-block">
                  <%= link_to 'Find out more', post_path(k.id) %> 
              </div>

            </div>

          </div>
        </div>
      <%end%>
    </div>
  <%end%>
</div>
<%else%>



