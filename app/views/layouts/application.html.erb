<!DOCTYPE html>
<html>
  <head>
    <title>MQ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #9be3de;">
            <a class="navbar-brand" href="/">MQ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="container">
                <div class="row navbar-nav">
                    <a class="nav-item nav-link active" href="/">Posts <span class="sr-only">(current)</span></a>
                </div>
                <div class="row">
                  <div class ="d-flex align-items-center">
                    <% if customer_signed_in? %>
                      <img src="https://image.flaticon.com/icons/png/128/149/149071.png" style="width: 30px"/><a class="nav-item nav-link active"<%= link_to 'Profile', customer_profile_path(current_customer.customer_profile.customer_id) %></a>
                        Welcome Back <%= current_customer.customer_profile.name %>
                        <a class="nav-item nav-link">
                            <%= link_to 'Logout', destroy_customer_session_url, method: :delete %>
                        </a>
                    <% else %>
                        <a class="nav-item nav-link">
                            <%= link_to 'Login', new_customer_session_url %>
                        </a>
                    <% end %>
                          </div>
                </div>
            </div>
        </nav>
            <%= yield %>
            <%= insert_paloma_hook %>

  </body>
</html>
