<!DOCTYPE html>
<html>
  <head>
    <title>MQ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">MQ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="container">
                <div class="row navbar-nav">
                    <a class="nav-item nav-link active" href="/">Posts <span class="sr-only">(current)</span></a>
                </div>
                <div class="row">
                    <% if customer_signed_in? %>
                      <a class="nav-item nav-link active" href="/customer_profiles">Profile <span class="sr-only">(current)</span></a>
                      <%= link_to 'Trial', customer_profile_path(current_customer.customer_profile.customer_id) %>
                        <p>You are signed in as <%= current_customer.email %></p>
                        <a class="nav-item nav-link">
                            <%= link_to 'Logout', destroy_customer_session_url, method: :delete %>
                        </a>
                    <% else %>
                        <a class="nav-item nav-link">
                            <%= link_to 'Login', new_customer_session_url %>
                        </a>
                    <% end %>
                </div>
            </div>
        </nav>
        <div class="text-center">
            <%= yield %>
            <%= insert_paloma_hook %>
        </div>
  </body>
</html>
