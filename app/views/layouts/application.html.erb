<!DOCTYPE html>
<html>
  <head>
    <title>MQ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">MQ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="container">
                <div class="row navbar-nav">
                    <a class="nav-item nav-link active" href="/">Posts <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="/orders">Orders</a>
                </div>
                <div class="row">
                    <% if user_signed_in? %>
                        <p>You are signed in as <%= current_user.email %></p>
                        <a class="nav-item nav-link">
                            <%= link_to 'Logout', destroy_user_session_url, method: :delete %>
                        </a>
                    <% else %>
                        <a class="nav-item nav-link">
                            <%= link_to 'Login', new_user_session_url %>
                        </a>
                    <% end %>
                </div>
            </div>
        </nav>
    <%= yield %>
  </body>
</html>
