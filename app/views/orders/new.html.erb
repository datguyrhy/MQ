<h1>New Order</h1>

<p>Restaurant Name: <%= @post.restaurant.name %></p>
<p>Minimum Spending: <%= @post.restaurant.minimum_spending %></p>

<% if @menu_items.length > 0 %>
    <%= form_with scope: :order, url: post_orders_path, local: true do |form| %>
        <%= form.collection_check_boxes :menu_item_ids, @menu_items, :id, :name %>
        <%= form.submit %>
    <% end %>
<% else %>
    <h3>Menu is not available.</h3>
<% end %>


<%= link_to 'Back to Post', post_path(@post.id) %>
