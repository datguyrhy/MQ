<p id="notice"><%= notice %></p>
<div class ='container-fluid'>
  <div class ="row">
    <div class = 'offset-1 col-10 d-flex flex-column'>
      <h2>Your order has been submitted successfully.</h2>
      <p>Order is created at: <%= @order.created_at %></p>
      <p>Expected delivery time: <%= @order.created_at + 2 * 60 * 60%></p>
    </div>
  </div>
  <div class = 'row'>
    <div class =" offset-1 col-10 d-flex align-items-center">
      <table class="table table-sm text-center">
          <thead>
              <tr>
                  <th>Item Name</th>
                  <th>Price</th>
              </tr>
          </thead>

          <tbody>
              <% @order.menu_items.each do |item| %>
                  <tr>
                      <td><%= item.name %></td>
                      <td>$<%= item.price %></td>
                  </tr>
              <% end %>
              <tr>
                  <td class="text-right">
                      <strong>Total amount payable: </strong>
                  </td>
                  <td>
                      <strong>$<%= @order.menu_items.sum(:price) %></strong>
                  </td>
              </tr>
          </tbody>
      </table>
    </div>
  </div>
  <div class = "col-12 d-flex justify-content-center">
  <%= button_to 'Back to Post', post_path(@order.post_id),{method:'get', class:'btn btn-primary btn-style'} %>
    </div>

</div>
