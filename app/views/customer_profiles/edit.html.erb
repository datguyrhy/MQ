<div class = "col-12 d-flex justify-content-center">
<h2>Edit Your Profile</h2>
  </div>

<%= form_with scope: :customer_profile, model: @customer_profile, local: true do |f| %>
<div class="container-fluid d-flex  flex-column justify-contents-center align-items-center">
        <div class ='col-4 d-flex justify-contents-start align-items-center'>
        <%= f.label :name %><br>&ensp;&ensp;
        <%= f.text_field(:name, {:class => "form-control"}) %>
      </div>

    <div class ='col-4 d-flex justify-contents-center align-items-center'>
        <%= f.label :address %><br>
        <%= f.text_field(:address, {:class => "form-control"}) %>
      </div>

      <div class ='col-4 d-flex justify-contents-start align-items-center'>
        <%= f.label :Phone %><br>&ensp;&ensp;
        <%= f.text_field(:phone, {:class => "form-control"}) %>
      </div>
      <div class =' d-flex justify-contents-start align-items-center'>
        <%= f.submit({:class => "btn btn-primary btn-style"}) %>
      </div>
      <br />
      <div class = "d-flex flex-row">
        <%= button_to 'Show', @customer_profile,({:class => "btn btn-primary btn-style"}) %>&ensp;|&ensp;
        <%= button_to 'Back', posts_path, {method:'get', class:'btn btn-primary btn-style'}%>
        </div>

  </div>
<% end %>
